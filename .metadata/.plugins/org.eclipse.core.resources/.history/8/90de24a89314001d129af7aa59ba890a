    		    					error: function(r,s,e) {
    		    						alert("평점 에러!");
    		    					},
    		    					success: function(data) {
    		    							var grade = data.grade;
    		    							var participation = data.participation;
    		    							
    		    							$(".notice-board").find(".star-grade").text(grade+"점");
    		    							$(".notice-board").find(".participation").text(participation+"명 참여");
    		    					}
    		    				});
    		    			}
